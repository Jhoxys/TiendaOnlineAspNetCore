@model ProductDto

@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5 ">New Product</h2>
    
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Name</label>
            <div cite="col-sm-8">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Brand</label>
            <div cite="col-sm-8">
                <input class="form-control" asp-for="Brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Category</label>
            <div cite="col-sm-8">
                <select class="form-select"  asp-for="Category">
                    <option value="Other">Other</option>
                    <option value="Phone">Phone</option>
                    <option value="Computer">Computer</option>
                    <option value="Asccesory">Asccesory</option>
                    <option value="Camara">Camara</option>
                    <option value="Movil">Movil</option>
                </select> 
            </div>
        </div>

        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Price</label>
            <div cite="col-sm-8">
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Description</label>
            <div cite="col-sm-8">
                <textarea class="form-control" asp-for="Description" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div> 

        <div class="row mb-3">
            <label cite="col-sm-4 col-from-label">Imagen</label>
            <div cite="col-sm-8"> 
                <input class="form-control" asp-for="ImageFile" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>


        <div class="row ">
            <div cite="offset-sm-4 col-sm-4 d-grid">
                <button type="submit" class="btn btn-primary">Sudmit</button>      
               </div>

          <div cite="offset-sm-4 col-sm-4 d-grid">

            <button type="submit" class="btn btn-outline-primary" asp-controller="Products" asp-action="Index"  role="button">Cancel</button>
        </div>

        </div>


    </form>
    </div>
</div>